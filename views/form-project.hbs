<div class="form-ex d-flex  flex-column mt-5 align-items-center" style="height:800px; width: 67%;  margin: 20px auto;">
    <h2 style="font-size: 26px;">ADD NEW PROJECT</h2>
    <form action="" method="post" enctype="multipart/form-data" class="font-weight-400  d-flex flex-column justify-content-evenly form-addition">
        <div class="name-form  d-flex flex-column">
            <label for="name" class="pb-1">Project Name</label>
            <input type="text" name="name" id="name" class="shadow bg-body rounded">
        </div>
        <div class="date-form d-flex justify-content-evenly">
            <div class="start-date date" >
                <label for="startDate" class="pb-1">Start Date</label>
                <input type="date"  name="startDate" id="startDate" style="width: 210px;">
            </div>
            <div class="end-date date" >
                <label for="endDate" class="pb-1">End Date</label>
                <input type="date" name="endDate" id="endDate" style="width: 230px;">
            </div>
        </div>
        <div class="description-form column d-flex flex-column">
            <label for="description" class="pb-1">Description</label>
            <textarea name="description" id="description" cols="30" rows="8"></textarea>
        </div>
        <p class="font-weight-400" style="margin-bottom: -10px;">Technologies</p>
        <div class="technologies-form column d-flex flex-row" style="margin-left: -10px;">
            <!-- <label for="technologies">Technologies</label> -->
            <div class="checkbox-first-form row-form ">
                <label class="container">
                    <input type="checkbox" value="0" class="checkbox" name="checkbox">
                    <span class="checkmark"></span>
                    Node Js
                </label>
                <label class="container" >
                    <input type="checkbox" value="2"  class="checkbox" name="checkbox"> 
                    <span class="checkmark"></span>
                    React Js
                </label>

            </div>
            <div class="checkbox-second-form row-form d-flex flex-column justify-content-between">
                <label class="container" > 
                    <span class="checkmark" style="background-color: aqua;"></span>
                    <input type="checkbox" value="1"  class="checkbox" name="checkbox">
                    Vue Js</label>
                <label class="container">
                    <input type="checkbox" value="3"  class="checkbox shadow bg-body rounded" name="checkbox">
                    <span class="checkmark"></span>
                    Python
                </label>
            </div>
        </div>
        <div class="upload-image-form d-flex flex-column">
            <div class="file-field border-2 bg-white d-flex align-items-baseline justify-content-between pe-3 shadow bg-body rounded">
                <input type="file" id="upload" class="upload-image" name="image" value="image">
                <!-- <label for="upload" class="margin-top image-upload">Upload Image</label> -->
                <i class="fa-solid fa-arrow-up-from-bracket upload-icon"></i>
            </div>
         
           
        </div>
        <button type="submit" onclick="data(event)"class="button-submit" id="submit">Add</button>
    </form>
</div>

</div> 


